<Page x:Class="CursWorkMift.Pages.LoginP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CursWorkMift.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginP" Background="White">

    <Grid>
        <Grid Width="250" Height="200">
            <TextBlock Text="Авторизация" HorizontalAlignment="Center" FontSize="20"></TextBlock>
            <TextBlock Text="Логин" FontSize="14"  VerticalAlignment="Top" Margin="20,30,0,0"/>
            <TextBox Name="LogTB" Text="{Binding login}" VerticalAlignment="Top" Margin="100,30,20,20"/>
            <TextBlock  Text="Пароль" VerticalAlignment="Top"  FontSize="14" Margin="20,60,0,0"/>
            <TextBox Name="PassTB" VerticalAlignment="Top" Text="{Binding password}" Margin="100,60,20,20"/>
            <Button Name="LogBT" Content="Авторизироваться" FontSize="14" VerticalAlignment="Bottom" Margin="30,0,30,60" Click="LogBT_Click"/>
            <Button Name="RegBT" Content="Регистрация" FontSize="14"  VerticalAlignment="Bottom" Margin="30,0,30,30" Click="RegBT_Click"/>
        </Grid>
    </Grid>
</Page>
